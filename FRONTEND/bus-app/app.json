{
  "expo": {
    "name": "MobTech",
    "slug": "MobTech",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/bus-app-icon.png",
    "scheme": "MobTech",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android", "web"],

    "splash": {
      "image": "./assets/images/splash-logo.png",
      "imageWidth": 260,
      "resizeMode": "contain",
      "backgroundColor": "#012d81"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jebediah.busapp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Precisamos da sua localização para mostrar sua posição no mapa."
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/bus-app-icon.png",
        "backgroundColor": "#012d81"
      },
      "edgeToEdgeEnabled": true,
      "config": {
        "googleMaps": {
          "apiKey": ""
        }
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.jebediah.busapp"
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/bus-app-icon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-maps",
        {
          "requestLocationPermission": true,
          "locationPermission": "Allow $(PRODUCT_NAME) to use your location"
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "4c438f1d-0c20-4e59-aab4-337bb5439dac"
      }
    },

    "owner": "jebediah"
  }
}